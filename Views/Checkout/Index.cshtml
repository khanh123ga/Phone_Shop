@model LTW_HQK_shop.Models.Cart
@{
    ViewBag.Title = "Checkout";
}

<main role="main">

    <div style="padding-top:30px;" class="container mt-4">
        <form class="needs-validation" name="frmthanhtoan" method="post"
              action="#">
            <input type="hidden" name="kh_tendangnhap" value="dnpcuong">

            <div class="py-5 text-center">
                <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                <h2>Thanh toán</h2>
                <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
            </div>

            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">


                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Giỏ hàng</span>
                        <span class="badge badge-secondary badge-pill">@Model.tongsoluonghang()</span>
                    </h4>
                    @foreach (var i in Model.Items)
                    {
                        double tong = Convert.ToDouble(i.sanpham.giaBan * i.soluong);
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">Tên mặt hàng: @i.sanpham.tenSP</h6>
                                    <small class="text-muted">Giá bán x số lượng: @i.sanpham.giaBan x @i.soluong</small>
                                </div>

                                <span class="text-muted">Tổng tiền: @tong</span>
                            </li>


                        </ul>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Tổng thành tiền: </span>
                        <strong>@Model.tongtien()</strong>
                    </li>





                </div>
                <div class="col-md-8 order-md-1">
                    <h4 style="padding-bottom:20px" class="mb-3">Thông tin khách hàng</h4>
                    @using (Html.BeginForm("Index", "Checkout"))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <label for="kh_ten">Họ tên</label>
                                <input type="text" class="form-control" name="kh_ten" required>
                            </div>
                            <div class="col-md-12">
                                <label for="kh_dienthoai">Điện thoại</label>
                                <input type="text" class="form-control" name="kh_dienthoai" required>
                            </div>
                            <div class="col-md-12">
                                <label for="kh_email">Email</label>
                                <input type="text" class="form-control" name="kh_email" required>
                            </div>
                            <div class="col-md-12">
                                <label for="kh_diachigiaohang">Địa chỉ giao hàng</label>
                                <input type="text" class="form-control" name="kh_diachigiaohang" required>
                            </div>

                        </div>

                    }
                    
                    <hr />


                    <a style="margin-top:30px;" href="@Url.Action("ShowToCart","Cart")" class="btn btn-primary btn-md">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp; <<< Quay lại
                    </a>
                    <a style="margin-top:30px;" href="@Url.Action("Success","Checkout")" class="btn btn-primary btn-md">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp; Đặt hàng >>>
                    </a>
                </div>
            </div>
        </form>

    </div>
    <!-- End block content -->
</main>

